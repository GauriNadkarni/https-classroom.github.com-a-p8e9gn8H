<p id="notice"><%= notice %></p>

<h2>Course Criteria</h2>

<table>
  <thead>
    <tr>

      <th>Course</th>
      <th>Criterion</th>
      <th>Exceeds Threshold</th>
      <th>Acceptable Threshold</th>
      <th>Below Threshold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_criterions.each do |course_criterion| %>
      <tr>

        <td><%= course_criterion.course.name %></td>
        <td><%= course_criterion.criterion.name %></td>
        <td><%= course_criterion.exceeds_threshold %></td>
        <td><%= course_criterion.acceptable_threshold %></td>
        <td><%= course_criterion.below_threshold %></td>
        <td><%= link_to 'Show', course_criterion %></td>
        <td><%= link_to 'Edit', edit_course_criterion_path(course_criterion) %></td>
        <td><%= link_to 'Destroy', course_criterion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

